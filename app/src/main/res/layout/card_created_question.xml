<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_question_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_regular"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Question"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Question Wrapper -->
    <LinearLayout
        android:id="@+id/question_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <!-- Input Question Title -->
        <EditText
            android:id="@+id/input_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/light_gray"
            android:fontFamily="@font/font_regular"
            android:gravity="top"
            android:hint="@string/insert_question_here"
            android:includeFontPadding="false"
            android:minHeight="150dp"
            android:padding="10dp" />

        <!-- Answer Wrapper -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Wrapper Option One -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_box_option_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:button="@drawable/custom_checkbox" />

                <EditText
                    android:id="@+id/input_option_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_8dp"
                    android:backgroundTint="@color/light_gray"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/option_one"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- Wrapper Option Two -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_box_option_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:button="@drawable/custom_checkbox" />

                <EditText
                    android:id="@+id/input_option_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_8dp"
                    android:backgroundTint="@color/light_gray"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/option_two"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- Wrapper Option Three -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_box_option_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:button="@drawable/custom_checkbox" />

                <EditText
                    android:id="@+id/input_option_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_8dp"
                    android:backgroundTint="@color/light_gray"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/option_three"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- Wrapper Option Four -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_box_option_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:button="@drawable/custom_checkbox" />

                <EditText
                    android:id="@+id/input_option_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_8dp"
                    android:backgroundTint="@color/light_gray"
                    android:ellipsize="end"
                    android:fontFamily="@font/font_regular"
                    android:hint="@string/option_four"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:singleLine="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Wrapper Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_update_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:fontFamily="@font/font_regular"
                android:includeFontPadding="false"
                android:text="Update"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_delete_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/font_regular"
                android:includeFontPadding="false"
                android:text="Delete"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>